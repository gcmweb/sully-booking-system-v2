
# Production Environment Variables for Netlify
# Copy this to .env.local for local production testing

# Database - Use external service for production
DATABASE_URL="postgresql://username:password@your-db-host.com:5432/database"

# Authentication - Use strong secrets in production
JWT_SECRET="your-super-secure-jwt-secret-here-min-32-chars"

# Stripe Live Configuration
STRIPE_SECRET_KEY="sk_live_your_live_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_live_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Live Price IDs
STRIPE_PAID_PRICE_ID="price_your_paid_plan_price_id"
STRIPE_PREMIUM_PRICE_ID="price_your_premium_plan_price_id"

# Production Environment
NODE_ENV="production"
STRIPE_MODE="live"

# Your Netlify App URLs
NEXT_PUBLIC_APP_URL="https://your-app-name.netlify.app"
WEBHOOK_BASE_URL="https://your-app-name.netlify.app"

# Performance
NEXT_TELEMETRY_DISABLED=1
